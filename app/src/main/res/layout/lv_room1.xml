<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/frame_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lvroom_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="current time"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lvroom_tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="someone get into room"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/frame_first"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/lvroom_iv_left_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lvroom_tv_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="system name"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/lvroom_tv_left_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dialogleft"
                android:gravity="center"
                android:text="system prompt message aaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textSize="18sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/frame_second"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lvroom_tv_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="user name"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                />
        <TextView
            android:id="@+id/lvroom_tv_right_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dialogright"
            android:gravity="center"
            android:text="user conversation"
            android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/lvroom_iv_right_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
             />

    </LinearLayout>

</RelativeLayout>